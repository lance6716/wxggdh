<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <view class="btn-area">
    <!-- <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取地图中心位置</button> -->
    <input class="page-body-button"  type="number" placeholder="电话号码输入！" bindinput="bindTelNumberInput"/>
    <input class="page-body-button"  type="text" placeholder="给个名儿" bindinput="bindTelNameInput"/>
    <button bindtap="addOneTel" class="page-body-button" type="primary">添加一个</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">定位一波</button>
    <!-- <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button> -->
    <!-- <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button> -->
  </view>
</view>